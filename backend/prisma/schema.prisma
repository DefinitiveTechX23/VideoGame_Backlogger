generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")  // keep this if you use directUrl env var, else remove this line
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  games     Game[]   // One user has many games
  createdAt DateTime @default(now())
}

model Game {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  completed   Boolean  @default(false)
  estimatedHours Int?
  playedHours Int      @default(0)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
